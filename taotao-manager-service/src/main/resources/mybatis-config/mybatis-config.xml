            &lt;!&ndash; 自动扫描 &ndash;&gt;
            &lt;!&ndash;<context:component-scan base-package="cn.jiuzhou.store.dao"/>&ndash;&gt;
            &lt;!&ndash; 引入配置文件 &ndash;&gt;
            &lt;!&ndash;<bean id="propertyConfigurer"
                  class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
                <property name="location" value="classpath:jdbc/jdbc.properties" />
            </bean>&ndash;&gt;

            &lt;!&ndash;<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">&ndash;&gt;
            &lt;!&ndash; spring的DriverManagerDataSource与apache的BasicDataSource&ndash;&gt;
            &lt;!&ndash;<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">&ndash;&gt;
                &lt;!&ndash;<property name="driverClassName" value="${driver}" />&ndash;&gt;
                &lt;!&ndash;<property name="url" value="${url}" />&ndash;&gt;
                &lt;!&ndash;<property name="username" value="${username}" />&ndash;&gt;
                &lt;!&ndash;<property name="password" value="${password}" />&ndash;&gt;
                &lt;!&ndash; 初始化连接大小 &ndash;&gt;
                &lt;!&ndash;<property name="initialSize" value="${initialSize}"></property>&ndash;&gt;
                &lt;!&ndash; 连接池最大数量 &ndash;&gt;
                &lt;!&ndash;<property name="maxActive" value="${maxActive}"></property>&ndash;&gt;
                &lt;!&ndash; 连接池最大空闲 &ndash;&gt;
                &lt;!&ndash;<property name="maxIdle" value="${maxIdle}"></property>&ndash;&gt;
                &lt;!&ndash; 连接池最小空闲 &ndash;&gt;
                &lt;!&ndash;<property name="minIdle" value="${minIdle}"></property>&ndash;&gt;
                &lt;!&ndash; 获取连接最大等待时间 &ndash;&gt;
                &lt;!&ndash;<property name="maxWait" value="${maxWait}"></property>&ndash;&gt;
            &lt;!&ndash;</bean>&ndash;&gt;

            &lt;!&ndash; spring和MyBatis完美整合，不需要mybatis的配置映射文件 &ndash;&gt;
            &lt;!&ndash;<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">&ndash;&gt;
                &lt;!&ndash;<property name="dataSource" ref="dataSource" />&ndash;&gt;
                &lt;!&ndash; 自动扫描mapping.xml文件 &ndash;&gt;
                &lt;!&ndash;<property name="mapperLocations" value="classpath:cn/jiuzhou/store/**/*Mapper.xml"></property>&ndash;&gt;
            &lt;!&ndash;</bean>&ndash;&gt;

            &lt;!&ndash; DAO接口所在包名，Spring会自动查找其下的类 &ndash;&gt;
            <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
                <property name="basePackage" value="cn.jiuzhou.store.dao" />
                <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"></property>
            </bean>

            &lt;!&ndash; (事务管理)transaction manager, use JtaTransactionManager for global tx &ndash;&gt;
            &lt;!&ndash;<bean id="transactionManager"
                  class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
                <property name="dataSource" ref="dataSource" />
            </bean>&ndash;&gt;

        </beans>-->
